% Coloured boxes
\usepackage{tcolorbox}
\tcbset{before upper={\parindent0in}} % No paragraph indentation within box
% Background knowledge
\definecolor{Postitblue}{RGB}{122,252,255}
\newtcolorbox{know}[1]{colback=Postitblue,colframe=Postitblue,title=\noindent\textcolor{black}{\textbf{#1}}}
% Post-it notes
\definecolor{Postitbuff}{RGB}{254,255,156}
\newtcolorbox{note}[1]{colback=Postitbuff,colframe=Postitbuff,title=\noindent\textcolor{black}{\textbf{#1}}}
% Caution
\definecolor{Postitpink}{RGB}{255,126,185}
\newtcolorbox{caution}[1]{colback=Postitpink,colframe=Postitpink,title=\noindent\textcolor{black}{\textbf{#1}}}

% R code
\definecolor{Rblue}{RGB}{36,106,191}
\definecolor{Rgray}{RGB}{190,190,190}
\newtcolorbox{Rcode}[1]{colback=Rblue!5!white,colframe=Rblue,title=\noindent \textcolor{Rgray}{\textbf{\texttt{R>}} #1}}
% Python script
\definecolor{Pyyellow}{RGB}{255,210,65}
\definecolor{Pyblue}{RGB}{54,105,148}
\newtcolorbox{Py}[1]{colback=Pyyellow!5!white,colframe=Pyyellow,title=\noindent \textcolor{Pyblue}{\textbf{\texttt{>>>}} #1}}
% Shell command
\definecolor{Bashblack}{RGB}{43,53,57}
% Bashwhite is just white, so no need to define any new colour here.
\newtcolorbox{Sh}[1]{colback=Bashblack!5!white,colframe=Bashblack,title=\noindent \textbf{\texttt{\$}} #1}
% Vim text
\definecolor{Vimgreen}{RGB}{0,127,0}
\definecolor{Vimgray}{RGB}{204,204,204}
\newtcolorbox{Vim}[1]{colback=Vimgreen!5!white,colframe=Vimgreen,title=\noindent \textcolor{Vimgray}{\textbf{\texttt{>}} #1}}

\newcommand{\bxr}[2]{
    \begin{Rcode}{#1}
